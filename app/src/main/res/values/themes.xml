<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CodeLab" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="android:statusBarColor">@color/LinearBlue</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/ColorAccent</item>
        <item name="android:textColor">@color/colorBackground</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Theme.ComputerCoding.ActionBar" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="android:statusBarColor">@color/LinearBlue</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/ColorAccent</item>
        <item name="android:textColor">@color/colorBackground</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="NointernetDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="timerDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowMinWidthMajor">80%</item>
        <item name="windowActionBar">false</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="menuTheme">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="cnb_iconColor">@color/colorBlack</item>
    </style>
</resources>